    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    tools:context="com.oneplus.camera.MainActivity" >
    
    <!-- Capture UI -->
    <ViewStub android:id="@+id/capture_ui_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout="@layout/layout_capture_ui"/>
    
    <!-- Capture bar -->
    <ViewStub android:id="@+id/capture_bar"
        android:layout_width="@dimen/capture_bar_width"
        android:layout_height="match_parent"
        android:layout="@layout/layout_capture_bar"
        android:layout_alignParentRight="true"/>

</RelativeLayout>
