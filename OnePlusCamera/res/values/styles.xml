<resources xmlns:android="http://schemas.android.com/apk/res/android">
    
    <!-- Main window style -->
    <style name="CameraWindowStyle" parent="@android:style/Theme.NoTitleBar.Fullscreen">
        <item name="android:windowAnimationStyle">@null</item>
    </style>
    
    <!-- Count-down timer -->
    <style name="CountDownTimerText">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textColor">@color/count_down_timer_text</item>
        <item name="android:shadowColor">@color/count_down_timer_text_shadow</item>
        <item name="android:shadowRadius">10</item>
        <item name="android:textSize">@dimen/count_down_timer_text_size</item>
    </style>

</resources>
